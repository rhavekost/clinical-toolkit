  },
  "scripts": {
    "generate:manifests": "node scripts/generate-manifests.js",
    "generate:manifests:dry-run": "node scripts/generate-manifests.js --dry-run",
    "generate:claude": "node scripts/generate-manifests.js --platform=claude",
    "generate:copilot": "node scripts/generate-manifests.js --platform=github-copilot",
    "generate:cursor": "node scripts/generate-manifests.js --platform=cursor",
    "generate:gemini": "node scripts/generate-manifests.js --platform=gemini-cli",
    "generate:codex": "node scripts/generate-manifests.js --platform=openai-codex",

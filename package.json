    "generate:consumer:perplexity": "node scripts/generate-consumer-targets.js --target=perplexity",
    "generate:consumer:ollama": "node scripts/generate-consumer-targets.js --target=ollama",
    "generate:consumer:copilot": "node scripts/generate-consumer-targets.js --target=copilot-consumer",
    "generate:consumer:instruction-pack": "node scripts/generate-consumer-targets.js --target=instruction-pack",
    "validate:consumers": "node scripts/validate-consumer-targets.js",

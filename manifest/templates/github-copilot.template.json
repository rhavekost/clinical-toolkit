{
  "_comment": "Template for GitHub Copilot (.github/copilot/manifest.json)",
  "_mapping": {
    "name": "{{meta.name}}",
    "version": "{{meta.version}}",
    "description": "{{meta.description}}",
    "author": "{{meta.author}}",
    "license": "{{meta.license}}",
    "repository": "{{meta.repository}}",
    "skills": "{{skills}}",
    "skills[].name": "{{id}}",
    "skills[].path": "{{path}}",
    "skills[].description": "{{description}}"
  },
  "_skillsFrontmatter": {
    "enabled": true,
    "fields": {
      "name": "{{id}}",
      "description": "{{description}}",
      "license": "{{meta.license}}"
    }
  },
  "_output": ".github/copilot/manifest.json"
}
